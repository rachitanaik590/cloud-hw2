{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Assignment 2",
    "Resources": {
      "a2role":{
        "Type" : "AWS::IAM::Role",
        "Properties" : {
            "AssumeRolePolicyDocument" : {
                "Version": "2012-10-17",
                "Statement": [
                  {
                    "Effect": "Allow",
                    "Principal": {
                      "Service": "lambda.amazonaws.com"
                    },
                    "Action": "sts:AssumeRole"
                  }
                ]
              },
              "ManagedPolicyArns" : [ "arn:aws:iam::aws:policy/AmazonESFullAccess",
                                        "arn:aws:iam::aws:policy/AmazonLexFullAccess",
                                     "arn:aws:iam::aws:policy/AmazonRekognitionFullAccess",
                                     "arn:aws:iam::aws:policy/AmazonS3FullAccess",
                                    "arn:aws:iam::aws:policy/CloudWatchEventsFullAccess"],
            
                "Policies": [
                    {
                        "PolicyName": "BasicLogs",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": "logs:CreateLogGroup",
                                    "Resource": "arn:aws:logs:us-east-1:642155208155:*"
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": [
                                        "arn:aws:logs:us-east-1:642155208155:log-group:/aws/lambda/lf1_a2:*"
                                    ]
                                }
                            ]
                        }
                    }
                ],
            "Description" : "Allows all required access",
            "RoleName" : "Lambda_access_all"
          }
      },
      
      "lf1a2": {
        "Type": "AWS::Lambda::Function",
        "Properties": {
          "Code": {
            "S3Bucket": "codebucket-hw2",
            "S3Key": "index-photos.zip"
          },
          "Description": "Lambda function for Rekognition",
          "Tags": [
            {
              "Value": "SAM",
              "Key": "lambda:createdBy"
            }
          ],
          "MemorySize": 128,
          "Environment": {
            "Variables": {
              "REGION": "us-east-1"
            }
          },
          "Handler": "lambda_function.lambda_handler",
          "Role": {"Fn::GetAtt" : ["a2role", "Arn"] },
          "Timeout": 60,
          "Runtime": "python3.6",
          "FunctionName": "lf1_a2"
        }
      },

      "lf2a2": {
        "Type": "AWS::Lambda::Function",
        "Properties": {
          "Code": {
            "S3Bucket": "codebucket-hw2",
            "S3Key": "search-photos.zip"
          },
          "Description": "Lambda function for ElasticSearch",
          "Tags": [
            {
              "Value": "SAM",
              "Key": "lambda:createdBy"
            }
          ],
          "MemorySize": 128,
          "Environment": {
            "Variables": {
              "REGION": "us-east-1"
            }
          },
          "Handler": "lambda_function.lambda_handler",
          "Role": {"Fn::GetAtt" : ["a2role", "Arn"] },
          "Timeout": 30,
          "Runtime": "python3.6",
          "FunctionName": "lf2_a2"
        }
      }
    }
}